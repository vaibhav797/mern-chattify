{
    "builds": [
      {
        "src": "./backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "./frontend/dist",
        "use": "@vercel/static"
      },
      {
        "src": "package.json",
        "use": "vercel-sapper"
      }
    ],
  
    "rewrites": [{ "source": "/(.*)", "destination": "/backend/server.js" }]
  }